<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Miniproyecto1.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:padding="8dp"
    android:layout_margin="6dp"
    android:theme="@style/Theme.Miniproyecto1.AppWidgetContainer"
    android:clipToPadding="false">


    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:src="@drawable/inventory"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/widget_inventory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_logo"
        android:layout_alignStart="@id/widget_logo"
        android:text="Inventory"
        android:textColor="#e7522e"
        android:textStyle="bold"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/widget_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/widget_eye_icon"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/cu_nto_tengo_de_inventario"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/widget_eye_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/widget_question_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/eye_image"
        android:tint="@android:color/white" />


    <TextView
        android:id="@+id/widget_inventory_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_question_text"
        android:layout_alignEnd="@id/widget_eye_icon"
        android:layout_marginTop="4dp"
        android:text="$ ****"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/widget_manage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/widget_manage_icon"
        android:layout_marginEnd="4dp"
        android:text="Gestionar inventario"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/widget_manage_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/config_widget"
        android:tint="#FA8523"
        android:contentDescription="Icono gestionar inventario" />

</RelativeLayout>
