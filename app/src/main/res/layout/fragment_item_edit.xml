<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.univalle.miniproyecto1.viewmodel.InventoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E2E2E"
        android:fitsSystemWindows="true"
        tools:context=".view.fragment.ItemEditFragment">



        <include
            android:id="@+id/contentToolbar2"
            layout="@layout/toolbar_edit_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/txtIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/contentToolbar2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtIdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/contentToolbar2"
            app:layout_constraintStart_toEndOf="@id/txtIdLabel"/>


        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_redondo2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="20dp"
            android:maxLength="40"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtIdLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtLabelNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre artÃ­culo"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:background="@drawable/bg_label"
            android:paddingHorizontal="10dp"
            android:translationY="12dp"
            android:layout_marginStart="35dp"
            app:layout_constraintBottom_toTopOf="@id/edtNombre"
            app:layout_constraintStart_toStartOf="@id/edtNombre"/>


        <EditText
            android:id="@+id/edtPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_redondo2"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtLabelPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:background="@drawable/bg_label"
            android:paddingHorizontal="10dp"
            android:translationY="12dp"
            android:layout_marginStart="35dp"
            app:layout_constraintBottom_toTopOf="@id/edtPrecio"
            app:layout_constraintStart_toStartOf="@id/edtPrecio"/>


        <EditText
            android:id="@+id/edtCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_redondo2"
            android:inputType="number"
            android:maxLength="4"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtPrecio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtLabelCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:background="@drawable/bg_label"
            android:paddingHorizontal="10dp"
            android:translationY="12dp"
            android:layout_marginStart="35dp"
            app:layout_constraintBottom_toTopOf="@id/edtCantidad"
            app:layout_constraintStart_toStartOf="@id/edtCantidad"/>


        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EDITAR"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/bg_redondo"
            android:backgroundTint="@null"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/edtCantidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
